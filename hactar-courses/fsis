                        displayPagination(page);
                    });
                    return button;
                };

                // Previous button
                if (currentPage > 1) {
                    const prevButton = createPageButton(currentPage - 1);
                    prevButton.textContent = "«";
                    paginationContainer.appendChild(prevButton);
                }

                // Page buttons
                for (let i = 1; i <= totalPages(); i++) {
                    paginationContainer.appendChild(createPageButton(i));
                }

                // Next button
                if (currentPage < totalPages()) {
                    const nextButton = createPageButton(currentPage + 1);
                    nextButton.textContent = "»";
                    paginationContainer.appendChild(nextButton);
                }
            };

            const filterCourses = () => {
                const language = languageFilter.value;
                const category = categoryFilter.value;
                const platform = platformFilter.value;

                filteredCourses = courses.filter(course => {
                    return (
                        (language === "all" || course.language === language) &&
                        (category === "all" || course.category === category) &&
                        (platform === "all" || course.platform === platform)
                    );
                });

                // Reset to first page after filtering
                displayCourses(1);
                displayPagination(1);
            };

            // Event listeners for filters
            languageFilter.addEventListener("change", filterCourses);
            categoryFilter.addEventListener("change", filterCourses);
            platformFilter.addEventListener("change", filterCourses);

            // Initialize with page 1
            displayCourses(1);
            displayPagination(1);
        });



