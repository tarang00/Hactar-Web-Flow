<script>
    document.addEventListener("DOMContentLoaded", () => {
        const coursesPerPage = 25; // Number of courses per page
        const coursesContainer = document.getElementById("coursesContainer");
        const paginationContainer = document.getElementById("paginationContainer");

        const courses = [
            // Your array of course objects (add as many as needed for testing)
            { title: "Learn JavaScript", language: "english", category: "programming", platform: "udemy", img: "/course.img/Effective_Communication_(2).png", description: "Master JavaScript with hands-on projects.", url: "https://www.udemy.com/course/learn-javascript/" },
            { title: "Diseño Gráfico", language: "spanish", category: "design", platform: "coursera", img: "https://via.placeholder.com/250x150", description: "Aprende diseño gráfico desde cero.", url: "https://www.coursera.org/courses?query=diseño%20gráfico" },
            { title: "Business Basics", language: "english", category: "business", platform: "edx", img: "https://via.placeholder.com/250x150", description: "Get started with business fundamentals.", url: "https://www.edx.org/course/business-basics" },
            { title: "Python for Beginners", language: "hindi", category: "programming", platform: "udemy", img: "https://via.placeholder.com/250x150", description: "Python programming in Hindi.", url: "https://www.udemy.com/course/python-for-beginners/" },
            // Add more courses here
        ];

        const totalCourses = courses.length;
        const totalPages = Math.ceil(totalCourses / coursesPerPage);

        const displayCourses = (page) => {
            coursesContainer.innerHTML = ""; // Clear the container
            const startIndex = (page - 1) * coursesPerPage;
            const endIndex = Math.min(startIndex + coursesPerPage, totalCourses);

            const currentCourses = courses.slice(startIndex, endIndex);
            currentCourses.forEach(course => {
                const courseElement = document.createElement("div");
                courseElement.classList.add("course-card");
                courseElement.innerHTML = `
                    <a href="${course.url}">
                        <img src="${course.img}" alt="${course.title}" />
                        <h3>${course.title}</h3>
                        <p>${course.description}</p>
                    </a>
                `;
                coursesContainer.appendChild(courseElement);
            });
        };

        const displayPagination = (currentPage) => {
            paginationContainer.innerHTML = ""; // Clear pagination

            const createPageButton = (page) => {
                const button = document.createElement("button");
                button.textContent = page;
                button.classList.add("pagination-button");
                if (page === currentPage) {
                    button.classList.add("active");
                }
                button.addEventListener("click", () => {
                    displayCourses(page);
                    displayPagination(page);
                });
                return button;
            };

            // Previous button
            if (currentPage > 1) {
                const prevButton = createPageButton(currentPage - 1);
                prevButton.textContent = "«";
                paginationContainer.appendChild(prevButton);
            }

            // Page buttons
            for (let i = 1; i <= totalPages; i++) {
                if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
                    paginationContainer.appendChild(createPageButton(i));
                } else if (i === currentPage - 2 || i === currentPage + 2) {
                    const dots = document.createElement("span");
                    dots.textContent = "...";
                    paginationContainer.appendChild(dots);
                }
            }

            // Next button
            if (currentPage < totalPages) {
                const nextButton = createPageButton(currentPage + 1);
                nextButton.textContent = "»";
                paginationContainer.appendChild(nextButton);
            }
        };

        // Initialize with page 1
        displayCourses(1);
        displayPagination(1);
    });
</script>





<script>
    document.addEventListener("DOMContentLoaded", () => {
        const courses = [
            {
                title: "Learn JavaScript",
                language: "english",
                category: "programming",
                platform: "udemy",
                img: "/course.img/Effective_Communication_(2).png",
                description: "Master JavaScript with hands-on projects.",
                url: "https://www.udemy.com/course/learn-javascript/"
            },
            {
                title: "Diseño Gráfico",
                language: "spanish",
                category: "design",
                platform: "coursera",
                img: "https://via.placeholder.com/250x150",
                description: "Aprende diseño gráfico desde cero.",
                url: "https://www.coursera.org/courses?query=diseño%20gráfico"
            },
            {
                title: "Business Basics",
                language: "english",
                category: "business",
                platform: "edx",
                img: "https://via.placeholder.com/250x150",
                description: "Get started with business fundamentals.",
                url: "https://www.edx.org/course/business-basics"
            },
            {
                title: "Python for Beginners",
                language: "hindi",
                category: "programming",
                platform: "udemy",
                img: "https://via.placeholder.com/250x150",
                description: "Python programming in Hindi.",
                url: "https://www.udemy.com/course/python-for-beginners/"
            },
            // Add more courses here
        ];
    
        const coursesContainer = document.getElementById("coursesContainer");
        const paginationContainer = document.getElementById("paginationContainer");
        const languageFilter = document.getElementById("languageFilter");
        const categoryFilter = document.getElementById("categoryFilter");
        const platformFilter = document.getElementById("platformFilter");
        const searchBar = document.getElementById("searchBar");
        const sortBy = document.getElementById("sortBy");
    
        const coursesPerPage = 3; // Number of courses per page
        let currentPage = 1;
    
        function renderCourses(filter = {}) {
            const { language, category, platform, search, sort } = filter;
            let filteredCourses = courses.filter(course =>
                (language === "all" || course.language === language) &&
                (category === "all" || course.category === category) &&
                (platform === "all" || course.platform === platform) &&
                (!search || course.title.toLowerCase().includes(search.toLowerCase()))
            );
    
            if (sort === "title") {
                filteredCourses.sort((a, b) => a.title.localeCompare(b.title));
            } else if (sort === "platform") {
                filteredCourses.sort((a, b) => a.platform.localeCompare(b.platform));
            }
    
            const totalCourses = filteredCourses.length;
            const totalPages = Math.ceil(totalCourses / coursesPerPage);
            const startIndex = (currentPage - 1) * coursesPerPage;
            const endIndex = Math.min(startIndex + coursesPerPage, totalCourses);
    
            coursesContainer.innerHTML = ""; // Clear courses
            filteredCourses.slice(startIndex, endIndex).forEach(course => {
                const courseCard = document.createElement("a");
                courseCard.href = course.url;
                courseCard.target = "_blank";
                courseCard.className = "course-card";
                courseCard.innerHTML = `
                    <img src="${course.img}" alt="${course.title}">
                    <h3>${course.title}</h3>
                    <p>${course.description}</p>
                    <small><strong>Platform:</strong> ${course.platform}</small><br>
                    <small><strong>Language:</strong> ${course.language}</small><br>
                    <small><strong>Category:</strong> ${course.category}</small>
                `;
                coursesContainer.appendChild(courseCard);
            });
    
            displayPagination(totalPages);
        }
    
        function displayPagination(totalPages) {
            paginationContainer.innerHTML = ""; // Clear pagination
    
            const createPageButton = (page) => {
                const button = document.createElement("button");
                button.textContent = page;
                button.classList.add("pagination-button");
                if (page === currentPage) {
                    button.classList.add("active");
                }
                button.addEventListener("click", () => {
                    currentPage = page;
                    renderCourses(getFilters());
                });
                return button;
            };
    
            // Previous button
            if (currentPage > 1) {
                const prevButton = createPageButton(currentPage - 1);
                prevButton.textContent = "«";
                paginationContainer.appendChild(prevButton);
            }
    
            // Page buttons
            for (let i = 1; i <= totalPages; i++) {
                paginationContainer.appendChild(createPageButton(i));
            }
    
            // Next button
            if (currentPage < totalPages) {
                const nextButton = createPageButton(currentPage + 1);
                nextButton.textContent = "»";
                paginationContainer.appendChild(nextButton);
            }
        }
    
        function getFilters() {
            return {
                language: languageFilter.value,
                category: categoryFilter.value,
                platform: platformFilter.value,
                search: searchBar.value,
                sort: sortBy.value
            };
        }
    
        // Event listeners for filters and sorting
        languageFilter.addEventListener("change", () => { currentPage = 1; renderCourses(getFilters()); });
        categoryFilter.addEventListener("change", () => { currentPage = 1; renderCourses(getFilters()); });
        platformFilter.addEventListener("change", () => { currentPage = 1; renderCourses(getFilters()); });
        searchBar.addEventListener("input", () => { currentPage = 1; renderCourses(getFilters()); });
        sortBy.addEventListener("change", () => { currentPage = 1; renderCourses(getFilters()); });
    
        // Initial render
        renderCourses();
    });
    </script>




const carouselWrapper = document.querySelector('.carousel-wrapper');
        const carouselItems = document.querySelectorAll('.carousel-item');
        let isMouseDown = false;
        let startX, scrollLeft;

        // Auto swipe interval
        let currentIndex = 0;
        const totalItems = carouselItems.length;

        function moveCarousel() {
            if (currentIndex === totalItems) {
                currentIndex = 0;
            }
            carouselWrapper.style.transform = `translateX(-${currentIndex * 100}%)`;
            currentIndex++;
        }

        // Enable auto swipe
        setInterval(moveCarousel, 3000);  // 3000ms (3 seconds) for auto-swipe

        // Enable manual swipe (drag)
        carouselWrapper.addEventListener('mousedown', (e) => {
            isMouseDown = true;
            startX = e.pageX - carouselWrapper.offsetLeft;
            scrollLeft = carouselWrapper.scrollLeft;
            carouselWrapper.style.cursor = 'grabbing';
        });

        carouselWrapper.addEventListener('mouseleave', () => {
            isMouseDown = false;
            carouselWrapper.style.cursor = 'grab';
        });

        carouselWrapper.addEventListener('mouseup', () => {
            isMouseDown = false;
            carouselWrapper.style.cursor = 'grab';
        });

        carouselWrapper.addEventListener('mousemove', (e) => {
            if (!isMouseDown) return;
            e.preventDefault();
            const x = e.pageX - carouselWrapper.offsetLeft;
            const walk = (x - startX) * 2; // Scroll speed multiplier
            carouselWrapper.scrollLeft = scrollLeft - walk;
        });

        // Infinite loop
        function loopCarousel() {
            setInterval(() => {
                if (currentIndex === totalItems) {
                    currentIndex = 0;
                }
                carouselWrapper.style.transition = 'none'; // Disable transition for smooth loop
                carouselWrapper.style.transform = `translateX(-${currentIndex * 100}%)`;
                currentIndex++;
            }, 3000); // Auto swipe every 3 seconds
        }

        loopCarousel();
    </script>

    <script>
        // Select necessary elements
        const menuIcon = document.querySelector('.menu-icon');
        const mobileMenu = document.querySelector('.mobile-menu-items');
        const closeIcon = document.querySelector('.mobile-menu-items .close-icon');

        // Open Mobile Menu
        menuIcon.addEventListener('click', () => {
            mobileMenu.style.display = 'flex';
        });

        // Close Mobile Menu
        closeIcon.addEventListener('click', () => {
            mobileMenu.style.display = 'none';
        });

        // Smooth Scrolling for Links
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

    </script>

